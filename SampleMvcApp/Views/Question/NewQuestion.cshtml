@model SampleMvcApp.qpServices.QuestionInfo

@{
    ViewBag.Title = "NewQuestion";
}

<h1>NewQuestion</h1>
<div class="panel-body">
    
        @using (Html.BeginForm())
        {
                <div class="form-group">
                    <p>Question: @Html.EditorFor(m => m.Question, new { htmlAttributes =  new { @class = "form-control"}})</p>
                </div>
                for (int i = 0; i < Model.Options.Length; i++)
                {
                <div class="form-group">
                    <p>Choice: @Html.EditorFor(m => m.Options[i], new { htmlAttributes = new { @class = "form-control" } })</p>
                </div>
                }
                <div class="form-group">
                    <p>Right Answer: @Html.EditorFor(m => m.RightAnswer, new { htmlAttributes = new { @class = "form-control" } })</p>
                </div>
                <div class="form-group">
                    <p>Subject: @Html.EditorFor(m => m.Subject, new { htmlAttributes = new { @class = "form-control" } })</p>
                </div>
                <div class="form-group">
                    <p>Marks: @Html.EditorFor(m => m.Marks, new { htmlAttributes = new { @class = "form-control" } })</p>
                </div>
                <input class="alert-info" type="submit" value="Save changes" />
        }
</div>